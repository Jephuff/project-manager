#!/bin/bash
PROJECT_MANAGER_CONFIG_DIR=~/.config/project-manager/

WORKING_DIR_FILE="$PROJECT_MANAGER_CONFIG_DIR"working_dir
touch "$WORKING_DIR_FILE"
WORKING_DIR=$(cat "$WORKING_DIR_FILE")

ARCHIVE_DIR_FILE="$PROJECT_MANAGER_CONFIG_DIR"archive_dir
touch "$ARCHIVE_DIR_FILE"
ARCHIVE_DIR=$(cat "$ARCHIVE_DIR_FILE")

SUBLIME_DIR_FILE="$PROJECT_MANAGER_CONFIG_DIR"sublime_dir
touch "$SUBLIME_DIR_FILE"
SUBLIME_DIR=$(cat "$SUBLIME_DIR_FILE")

EDITOR_FILE="$PROJECT_MANAGER_CONFIG_DIR"editor
touch "$EDITOR_FILE"
EDITOR=$(cat "$EDITOR_FILE")

GIT_CLIENT_FILE="$PROJECT_MANAGER_CONFIG_DIR"sublime_dir
touch "$GIT_CLIENT_FILE"
GIT_CLIENT=$(cat "$GIT_CLIENT_FILE")

ATOM_PROJECT_DIR=~/.atom/
ATOM_PROJECT_MANAGER_FILE="$ATOM_PROJECT_DIR"projects.cson
TEMP_DIR="$PROJECT_MANAGER_CONFIG_DIR"temp/
mkdir -p "$TEMP_DIR"
CALLING_DIR=$(pwd)
