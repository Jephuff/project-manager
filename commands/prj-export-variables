#!/bin/bash
PROJECT_MANAGER_CONFIG_DIR=~/.config/project-manager/

WORKING_DIR_FILE="$PROJECT_MANAGER_CONFIG_DIR"working_dir
touch "$WORKING_DIR_FILE"
WORKING_DIR=$(cat "$WORKING_DIR_FILE")

EDITOR_FILE="$PROJECT_MANAGER_CONFIG_DIR"editor
touch "$EDITOR_FILE"
EDITOR=$(cat "$EDITOR_FILE")

GIT_CLIENT_FILE="$PROJECT_MANAGER_CONFIG_DIR"git-client
touch "$GIT_CLIENT_FILE"
GIT_CLIENT=$(cat "$GIT_CLIENT_FILE")

TEMP_DIR="$PROJECT_MANAGER_CONFIG_DIR"temp/
mkdir -p "$TEMP_DIR"
CALLING_DIR=$(pwd)
